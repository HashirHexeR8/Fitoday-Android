<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvProfileInfoHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About You"
        android:textColor="#001F3F"
        android:textSize="16sp"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:id="@+id/llFirstProfileInfoItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/ivFirstProfileInfoTitleIcon"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_profile_gender"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/tvFirstProfileInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#001F3F"
                    android:fontFamily="@font/comfortaa_light"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:paddingBottom="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/list_item_background"
                app:layout_constraintTop_toBottomOf="@+id/llFirstProfileInfoItemTitle"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/tvFirstProfileInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Female"
                    android:textSize="16sp"
                    android:textColor="#001F3F"
                    android:fontFamily="@font/comfortaa_light"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:id="@+id/llSecondProfileInfoItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/ivSecondProfileInfoTitleIcon"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_profile_birthday"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/tvSecondProfileInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textColor="#001F3F"
                    android:fontFamily="@font/comfortaa_light"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:paddingBottom="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/list_item_background"
                app:layout_constraintTop_toBottomOf="@+id/llSecondProfileInfoItemTitle"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/tvSecondProfileInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Sep, 4, 1990"
                    android:textSize="16sp"
                    android:textColor="#001F3F"
                    android:fontFamily="@font/comfortaa_light"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llProfileItemSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="#40001F3F"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>


</LinearLayout>