<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFD7E1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivShopDeviceBannerIcon"
        android:layout_width="148dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.7"
        android:src="@drawable/ic_smart_weight_device"
        android:layout_margin="20dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvShopDeviceBannerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="190dp"
        android:text="Fitody Smart Tape"
        android:textSize="13sp"
        android:textColor="#EF426F"
        android:textAlignment="center"
        android:fontFamily="@font/comfortaa_bold"
        app:layout_constraintStart_toEndOf="@id/ivShopDeviceBannerIcon"
        app:layout_constraintEnd_toEndOf="@id/tvShopBannerDescription"
        app:layout_constraintBottom_toTopOf="@id/tvShopBannerDescription"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvShopBannerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="190dp"
        app:layout_constraintVertical_bias="0.6"
        android:text="Optimize Your Fitness Performance With Precise Measuring and Tracking"
        android:textSize="8sp"
        android:textColor="#001F3F"
        android:textAlignment="center"
        android:fontFamily="@font/comfortaa_bold"
        app:layout_constraintStart_toEndOf="@id/ivShopDeviceBannerIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>