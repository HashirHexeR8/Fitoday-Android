<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bottomSheetTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading Data"
        android:textAlignment="center"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="#001F3F"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivDeviceIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetTitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Fitody Smart Tape"
        android:textColor="#001F3F"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_bold"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivDeviceIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="294dp"
        android:text="Please wait while we read data from device\nPlease keep the device connected for better results."
        android:textColor="#A3A3A3"
        android:textSize="12sp"
        android:textAlignment="textStart"
        android:fontFamily="@font/comfortaa_light"
        android:layout_marginBottom="100dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>