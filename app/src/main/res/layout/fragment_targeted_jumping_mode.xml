<!--                android:text="00:30"-->
<!--                android:textSize="17sp"-->
<!--                android:textColor="#FFFFFF"-->
<!--                android:fontFamily="@font/comfortaa_bold"/>-->

<!--            <TextView-->
<!--                android:id="@+id/tvSmartRopeTotalTimeText"-->
<!--                android:layout_width="wrap_content"-->
