<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSmartRopeTopView"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="#001F3F"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rlSmartRopeBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ibSmartRopeBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:src="@drawable/back_button_white_icon" />

                <ImageView
                    android:id="@+id/ivSmartRope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/ibSmartRopeBack"
                    android:src="@drawable/smart_rope_icon_white" />

                <TextView
                    android:id="@+id/tvSmartRopeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/ivSmartRope"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Smart Jump Rope"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ibSmartRopeSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:layout_toStartOf="@id/ibSmartRopeExpand"
                    android:background="@null"
                    android:src="@drawable/settings_button_white_icon" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ibSmartRopeExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:src="@drawable/ic_expand_button_white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/ivExerciseIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:text="25"
                android:textColor="#FFFFFF"
                android:textSize="56sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Stats"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comfortaa_bold"
                app:layout_constraintTop_toBottomOf="@id/ivExerciseIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvSmartRopeCaloriesBurned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tvSmartRopeCaloriesBurnedText"
                app:layout_constraintBottom_toTopOf="@id/tvSmartRopeCaloriesBurnedText" />

            <TextView
                android:id="@+id/tvSmartRopeCaloriesBurnedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories Burned"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvSmartRopeTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:30"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comfortaa_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvSmartRopeTotalTimeText"/>

            <TextView
                android:id="@+id/tvSmartRopeTotalTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Time"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comfortaa_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvSmartRopeTotalJumps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="112"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="@id/tvSmartRopeTotalJumpsText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvSmartRopeTotalJumpsText" />

            <TextView
                android:id="@+id/tvSmartRopeTotalJumpsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Jumps"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvFreeJumpModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="289dp"
            android:text="Free Jumping Mode"
            android:textSize="14sp"
            android:textColor="#001F3F"
            android:fontFamily="@font/comfortaa_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clSmartRopeTopView"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/ivFreeJumpModeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_smart_rope_free_jump_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFreeJumpModeText"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFreeJumpMode"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:text="GO"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/sign_up_with_social_button_drawable"
            app:layout_constraintStart_toEndOf="@+id/ivFreeJumpModeIcon"
            app:layout_constraintTop_toBottomOf="@id/tvFreeJumpModeText"
            app:layout_constraintBottom_toTopOf="@id/llSmartRopeModeItemSeparator"
            android:layout_marginStart="50dp"/>

        <LinearLayout
            android:id="@+id/llJumpModeSeparator"
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:background="#40001F3F"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/clSmartRopeTopView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/tvTimerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="289dp"
            android:text="Timer"
            android:textSize="14sp"
            android:textColor="#001F3F"
            android:fontFamily="@font/comfortaa_bold"
            app:layout_constraintStart_toEndOf="@id/llJumpModeSeparator"
            app:layout_constraintTop_toBottomOf="@id/clSmartRopeTopView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/ivTimerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_smart_rope_timer_mode"
            app:layout_constraintStart_toEndOf="@id/llJumpModeSeparator"
            app:layout_constraintTop_toBottomOf="@id/tvTimerText"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:text="GO"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/sign_up_with_social_button_drawable"
            app:layout_constraintStart_toEndOf="@+id/ivTimerIcon"
            app:layout_constraintTop_toBottomOf="@id/tvTimerText"
            app:layout_constraintBottom_toTopOf="@id/llSmartRopeModeItemSeparator"
            android:layout_marginStart="50dp"/>

        <LinearLayout
            android:id="@+id/llSmartRopeModeItemSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#40001F3F"
            app:layout_constraintTop_toBottomOf="@id/ivFreeJumpModeIcon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/tvCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="289dp"
            android:text="Countdown"
            android:textSize="14sp"
            android:textColor="#001F3F"
            android:fontFamily="@font/comfortaa_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llSmartRopeModeItemSeparator"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/ivCountDownIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_smart_rope_count_down_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCountDown"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCountDown"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:text="GO"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/sign_up_with_social_button_drawable"
            app:layout_constraintStart_toEndOf="@+id/ivCountDownIcon"
            app:layout_constraintTop_toBottomOf="@id/tvCountDown"
            app:layout_constraintBottom_toTopOf="@id/llSmartRopeShopSeparator"
            android:layout_marginStart="50dp"/>

        <LinearLayout
            android:id="@+id/llCountDownModeItemSeparator"
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:orientation="vertical"
            android:background="#40001F3F"
            app:layout_constraintTop_toBottomOf="@id/llSmartRopeModeItemSeparator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvTargetModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="289dp"
            android:text="Target Mode"
            android:textSize="14sp"
            android:textColor="#001F3F"
            android:fontFamily="@font/comfortaa_bold"
            app:layout_constraintStart_toEndOf="@id/llCountDownModeItemSeparator"
            app:layout_constraintTop_toBottomOf="@id/llSmartRopeModeItemSeparator"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/ivTargetModeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_smart_rope_target_mode"
            app:layout_constraintStart_toEndOf="@id/llJumpModeSeparator"
            app:layout_constraintTop_toBottomOf="@id/tvTargetModeText"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTargetMode"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:text="GO"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/sign_up_with_social_button_drawable"
            app:layout_constraintStart_toEndOf="@+id/ivTargetModeIcon"
            app:layout_constraintTop_toBottomOf="@id/tvTargetModeText"
            app:layout_constraintBottom_toTopOf="@id/llSmartRopeShopSeparator"
            android:layout_marginStart="50dp"/>

        <LinearLayout
            android:id="@+id/llSmartRopeShopSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#40001F3F"
            app:layout_constraintTop_toBottomOf="@id/ivTargetModeIcon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:id="@+id/ivShopSmartRopeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shop_smart_jump_rope"
            app:layout_constraintTop_toBottomOf="@id/llSmartRopeShopSeparator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSmartRopeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitody Smart Jump Rope"
            android:textColor="#001F3F"
            android:textSize="13sp"
            android:fontFamily="@font/comfortaa_bold"
            app:layout_constraintTop_toBottomOf="@id/ivShopSmartRopeIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSmartRopeDiscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="210dp"
            android:text="Burn Fat, Boost Cardio, and Build Lean Muscle"
            android:textColor="#A3A3A3"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="@font/comfortaa_light"
            app:layout_constraintTop_toBottomOf="@id/tvSmartRopeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSmartRopeShopNowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="210dp"
            android:text="SHOP NOW"
            android:textColor="#EF426F"
            android:textSize="13sp"
            android:textAlignment="center"
            android:fontFamily="@font/comfortaa_bold"
            app:layout_constraintTop_toBottomOf="@id/tvSmartRopeDiscription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/llSmartRopeShopNowSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#40001F3F"
            app:layout_constraintTop_toBottomOf="@id/tvSmartRopeShopNowButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
