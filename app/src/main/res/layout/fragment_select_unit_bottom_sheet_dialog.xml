<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bottomSheetTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select a unit"
        android:textAlignment="center"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="#001F3F"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
        android:id="@+id/rgUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetTitleText">
        <RadioButton
            android:id="@+id/rbFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kg"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="#001F3F"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rbSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lbs"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="#001F3F"
            android:textSize="15sp"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>